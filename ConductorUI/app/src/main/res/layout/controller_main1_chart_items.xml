<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    app:cardCornerRadius="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/main1_chart_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/book"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/main1_chart_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="title"
            app:layout_constraintTop_toBottomOf="@id/main1_chart_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:id="@+id/main1_chart_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            app:layout_constraintTop_toBottomOf="@id/main1_chart_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="10sp"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:id="@+id/main1_chart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main1_chart_author"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="1dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>